@using WEBPage.View_Models
@model LoginViewModel

<!-- Section: Design Block -->
<section class="d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div class="card shadow-lg bg-white" style="
        width: 90%; /* Take most of the page */
        max-width: 500px; /* Max width */
        ">
        <div class="card-body py-5 px-md-5">

            <h2 class="fw-bold mb-5 text-center">Login to your account</h2>
            <form>
                <!-- Email input -->
                <div data-mdb-input-init class="form-outline mb-4">
                    <input type="email" id="form3Example1" class="form-control" required />
                    <label class="form-label" for="form3Example1">Email address</label>
                </div>

                <!-- Password input -->
                <div data-mdb-input-init class="form-outline mb-4">
                    <input type="password" id="form3Example2" class="form-control" required />
                    <label class="form-label" for="form3Example2">Password</label>
                </div>

                <!-- Checkbox and Forgot Password link -->
                <div class="form-check d-flex justify-content-start mb-4 w-100 d-flex justify-content-between">
                    <div>
                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" />
                        <label class="form-check-label me-3" for="form2Example33">
                            Remember me
                        </label>
                    </div>
                    <div>
                        <a href="#" class="text-decoration-none align-items-end">Forgot Password?</a>
                    </div>
                </div>

                <!-- Submit button -->
                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary w-100 btn-block mb-4">
                    Login
                </button>

                <!-- Register button -->
                <div class="text-center">
                    <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Sign up</a></p>
                </div>

            </form>
        </div>
    </div>
</section>
<!-- Section: Design Block -->
