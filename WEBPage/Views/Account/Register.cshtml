@using WEBPage.View_Models.WEBPage.View_Models
@model RegisterViewModel

<!-- Section: Design Block -->
<section class="d-flex align-items-center justify-content-center mb-5" style="height: 100vh; min-height:fit-content;">
    <div class="card shadow-5-strong bg-white" style="
        width: 90%; /* Take most of the page */
        max-width: 600px; /* Max width */
        ">
        <div class="card-body py-5 px-md-5">

            <h2 class="fw-bold mb-5 text-center">Create an account</h2>
            <form asp-action="Register" method="post">
                <div class="row">
                    <!-- First Name -->
                    <div class="col-md-6 mb-4">
                        <div data-mdb-input-init class="form-outline">
                            <input type="text" asp-for="FirstName" class="form-control" required />
                            <label class="form-label" asp-for="FirstName"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6 mb-4">
                        <div data-mdb-input-init class="form-outline">
                            <input type="text" asp-for="LastName" class="form-control" required />
                            <label class="form-label" asp-for="LastName"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Email input -->
                <div data-mdb-input-init class="form-outline mb-4">
                    <input type="email" asp-for="Email" class="form-control" required />
                    <label class="form-label" asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password input -->
                <div data-mdb-input-init class="form-outline mb-4">
                    <input type="password" asp-for="Password" class="form-control" required />
                    <label class="form-label" asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password input -->
                <div data-mdb-input-init class="form-outline mb-4">
                    <input type="password" asp-for="ConfirmPassword" class="form-control" required />
                    <label class="form-label" asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Phone Number input -->
                <div data-mdb-input-init class="form-outline mb-4">
                    <input type="text" asp-for="PhoneNumber" class="form-control" required />
                    <label class="form-label" asp-for="PhoneNumber"></label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Address input -->
                <div data-mdb-input-init class="form-outline mb-4">
                    <input type="text" asp-for="Address" class="form-control" required />
                    <label class="form-label" asp-for="Address"></label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- User Type Selection -->
                <h5 class="mb-4">Register as:</h5>
                <div class="d-flex justify-content-start">

                <div class="form-check mb-4 me-3">
                    <input class="form-check-input" type="radio" name="UserType" id="userType" value="User" checked onchange="toggleTechnicalFields()" />
                    <label class="form-check-label" for="userType">User</label>
                </div>
                <div class="form-check mb-4">
                    <input class="form-check-input" type="radio" name="UserType" id="technicalType" value="Technical" onchange="toggleTechnicalFields()" />
                    <label class="form-check-label" for="technicalType">Technical</label>
                </div>
                </div>

                <!-- National ID input for Technical only -->
               @*  @if (Model.IsTechnician)
                {
                    <div id="technicalFields" style="display: none;">
                        <div data-mdb-input-init class="form-outline mb-4">
                            <input type="text" asp-for="NationalID" class="form-control" required />
                            <label class="form-label" asp-for="NationalID"></label>
                            <span asp-validation-for="NationalID" class="text-danger"></span>
                        </div>

                        <!-- Job Title input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <input type="text" asp-for="JobTitle" class="form-control" required />
                            <label class="form-label" asp-for="JobTitle"></label>
                            <span asp-validation-for="JobTitle" class="text-danger"></span>
                        </div>
                    </div>
                } *@
                <!-- Submit button -->
                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary w-100 btn-block mb-4">
                    Register
                </button>

                <!-- Register button -->
                <div class="text-center">
                    <p>Already have an account? <a href="/Account/Login">Login</a></p>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    function toggleTechnicalFields() {
        const technicalFields = document.getElementById('technicalFields');
        const isTechnical = document.querySelector('input[name="UserType"]:checked').value === 'Technical';
        technicalFields.style.display = isTechnical ? 'block' : 'none';
    }
</script>
<!-- Section: Design Block -->
